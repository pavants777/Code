https://www.geeksforgeeks.org/problems/need-some-change/1

class Solution{
  public:
    void swap(int &a,int &b){
        int temp = a;
        a = b;
        b = temp;
    }
    void swapElements(int arr[], int n){
        
        // Your code here
        for(int i=0;i<n-2;i++){
            swap(arr[i],arr[i+2]);
        }
        
    }

};
